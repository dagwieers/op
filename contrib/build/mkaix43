home=$HOME
rdist=esxide@recife:/home/ftp/diffusion/exploitation/op/
osrel=$(oslevel | cut -d . -f 1-2)
vers=1.32
dist=$(echo $osrel | tr -d .)
PATH=/usr/sbin:$PATH

# set -e
cd $home/op
make distclean
mkdir -p build/aix$dist
cd $home/op/build/aix$dist
for i in lex.l main.c regexp.c snprintf.c strlcat.c strlcpy.c util.c yywrap.c op.1 op.conf-dist
do ln -fs ../../$i; done; cp -p ../../lex.c lex.c
../../configure --enable-xauth=/usr/bin/X11/xauth
make
sudo make install DESTDIR=$home/op/contrib/aix$dist/op/op
sudo rm $home/op/contrib/aix$dist/op/op/usr/local/etc/op.conf
cd $home/op/contrib/aix$dist/op/op
# echo /usr/local/etc/op.conf preserve > root/.info/ratp.freeware.op.cfgfiles
sed "s|@PWD@|$PWD|" op.tmpl > op.template
mkinstallp -d root -T op.template
#sudo installp -Ld root/tmp/ratp.freeware.op.$vers.$osrel.bff
#sudo installp -ld root/tmp/ratp.freeware.op.$vers.$osrel.bff
scp root/tmp/ratp.freeware.op.$vers.$osrel.bff $rdist
